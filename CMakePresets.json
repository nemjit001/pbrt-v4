{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 12,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "vs22",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      }
    },
    {
      "name": "clang",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
      },
      "architecture": {
        "strategy": "external",
        "value": "x64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs22-debug",
      "configurePreset": "vs22",
      "configuration": "Debug"
    },
    {
      "name": "vs22-release",
      "configurePreset": "vs22",
      "configuration": "Release"
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang",
      "configuration": "Debug"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang",
      "configuration": "Release"
    }
  ]
}